<?xml version="1.0" encoding="utf-8"?>

<!--
  activity_game.xml
......................
  Layout de la pantalla de juego (Ahorcado) con:
   - TopBar reutilizable (Toolbar incluida por <include>).
   - Contenedor del gameplay (gameContent) que se oculta al abrir Settings.
   - FrameLayout (frame) donde se carga SettingsFragment mediante replace()+addToBackStack().
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <include layout="@layout/activity_topbar" /> <!--IA-asistencia: reciclar topbar-->

    <!-- Teclado -->
    <LinearLayout
        android:id="@+id/game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="top|center_horizontal"
        android:padding="16dp"
        >

        <ImageView
            android:id="@+id/imgAhorcado"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:src="@drawable/ic_ahorcado_0" />

        <TextView
            android:id="@+id/tvMasked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="_ _ _"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/you_win"
            android:textSize="24sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/tap_continue"
            android:textColor="@color/white"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical">

            <!-- Teclado de la fila 1: A-F -->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnA"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="onKeyClick"
                    android:text="A"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/btnB"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="onKeyClick"
                    android:text="B"
                    android:textColor="@color/white"/>

                <Button
                    android:id="@+id/btnC"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="onKeyClick"
                    android:text="C"
                    android:textColor="@color/white"/>

                <Button
                    android:id="@+id/btnD"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="onKeyClick"
                    android:text="D"
                    android:textColor="@color/white"/>

                <Button
                    android:id="@+id/btnE"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="onKeyClick"
                    android:text="E"
                    android:textColor="@color/white"/>

                <Button
                    android:id="@+id/btnF"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="onKeyClick"
                    android:text="F"
                    android:textColor="@color/white"/>
            </LinearLayout>

            <!-- Teclado de la fila 2: G-L -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnG"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="onKeyClick"
                    android:text="G"
                    android:textColor="@color/white"/>

                <Button
                    android:id="@+id/btnH"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="onKeyClick"
                    android:text="H"
                    android:textColor="@color/white"/>

                <Button
                    android:id="@+id/btnI"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="onKeyClick"
                    android:text="I"
                    android:textColor="@color/white"/>

                <Button
                    android:id="@+id/btnJ"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="onKeyClick"
                    android:text="J"
                    android:textColor="@color/white"/>

                <Button
                    android:id="@+id/btnK"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="onKeyClick"
                    android:text="K"
                    android:textColor="@color/white"/>

                <Button
                    android:id="@+id/btnL"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="onKeyClick"
                    android:text="L"
                    android:textColor="@color/white"/>
            </LinearLayout>

            <!-- Teclado de la fila 3: M-Q -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/btnM"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="onKeyClick"
                    android:text="M"
                    android:textColor="@color/white"/>

                <Button
                    android:id="@+id/btnN"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="onKeyClick"
                    android:text="N"
                    android:textColor="@color/white"/>

                <Button
                    android:id="@+id/btnO"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="onKeyClick"
                    android:text="O"
                    android:textColor="@color/white"/>

                <Button
                    android:id="@+id/btnP"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="onKeyClick"
                    android:text="P"
                    android:textColor="@color/white"/>

                <Button
                    android:id="@+id/btnQ"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="onKeyClick"
                    android:text="Q"
                    android:textColor="@color/white"/>

                <Button
                    android:id="@+id/btnR"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="onKeyClick"
                    android:text="R"
                    android:textColor="@color/white"/>
            </LinearLayout>

            <!-- Teclado de la fila 4: S-X -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnS"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="onKeyClick"
                    android:text="S"
                    android:textColor="@color/white"/>

                <Button
                    android:id="@+id/btnT"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="onKeyClick"
                    android:text="T"
                    android:textColor="@color/white"/>

                <Button
                    android:id="@+id/btnU"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="onKeyClick"
                    android:text="U"
                    android:textColor="@color/white"/>

                <Button
                    android:id="@+id/btnV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="onKeyClick"
                    android:text="V"
                    android:textColor="@color/white"/>

                <Button
                    android:id="@+id/btnW"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="onKeyClick"
                    android:text="W"
                    android:textColor="@color/white"/>

                <Button
                    android:id="@+id/btnX"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="onKeyClick"
                    android:text="X"
                    android:textColor="@color/white"/>
            </LinearLayout>

            <!-- Teclado de la fila 5: Y-Z -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnY"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="onKeyClick"
                    android:text="Y"
                    android:textColor="@color/white"/>

                <Button
                    android:id="@+id/btnZ"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="onKeyClick"
                    android:text="Z"
                    android:textColor="@color/white"/>

                <!--Para ayudar a distribucion y que se vea ordenado-->
                <Button
                    android:id="@+id/btnNon"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:visibility="invisible" />

                <Button
                    android:id="@+id/btnNon1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:visibility="invisible" />

                <Button
                    android:id="@+id/btnNon2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:visibility="invisible" />

                <Button
                    android:id="@+id/btnNon3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:visibility="invisible" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <!-- CONTENEDOR DEL SettingsFragment
            Hermano de rvLevels: se muestra (VISIBLE)
            al abrir ajustes y rvLevels se oculta (GONE).-->
        <FrameLayout
            android:id="@+id/frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:visibility="gone">
        </FrameLayout>

    </LinearLayout>