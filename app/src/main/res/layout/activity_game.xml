                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="P"
                android:onClick="onKeyClick"/>
            <Button
                android:id="@+id/btnQ"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Q"
                android:onClick="onKeyClick"/>
            <Button
                android:id="@+id/btnR"
                android:layout_width="0dp"
