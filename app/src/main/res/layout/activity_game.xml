                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="F"
                android:onClick="onKeyClick"/>
            <Button
                android:id="@+id/btnG"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="G"
                android:onClick="onKeyClick"/>
            <Button
                android:id="@+id/btnH"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="H"
                android:onClick="onKeyClick"/>
            <Button
                android:id="@+id/btnI"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="I"
                android:onClick="onKeyClick"/>
            <Button
                android:id="@+id/btnJ"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="J"
                android:onClick="onKeyClick"/>
        </LinearLayout>

        <!-- Fila 3: K-O -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnK"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="K"
                android:onClick="onKeyClick"/>
            <Button
                android:id="@+id/btnL"
